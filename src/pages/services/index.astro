---
import Layout from '../../layouts/Layout.astro';
import { Sofa, Car, Bed, Camera, ArrowRight } from 'lucide-astro';

const title = 'Nos Services de Nettoyage Professionnel à Lille | Nettoyage Pro Lille';
const description = 'Découvrez nos services de nettoyage professionnel à Lille : canapés, matelas, tapis et sièges auto. Expertise et satisfaction garantie.';

const services = [
  {
    title: 'Nettoyage de Canapés',
    description: 'Service professionnel de nettoyage de canapés à domicile sur Lille',
    icon: Sofa,
    href: '/services/canapes',
    image: 'https://images.unsplash.com/photo-1484101403633-562f891dc89a?auto=format&fit=crop&q=80',
  },
  {
    title: 'Nettoyage de Sièges Auto',
    description: 'Nettoyage et rénovation de sièges automobiles à Lille',
    icon: Car,
    href: '/services/sieges-auto',
    image: 'https://images.unsplash.com/photo-1507136566006-cfc505b114fc?auto=format&fit=crop&q=80',
  },
  {
    title: 'Nettoyage de Matelas',
    description: 'Nettoyage en profondeur et désinfection de matelas à Lille',
    icon: Bed,
    href: '/services/matelas',
    image: 'https://images.unsplash.com/photo-1584132967334-10e028bd69f7?auto=format&fit=crop&q=80',
  },
  {
    title: 'Nettoyage de Tapis',
    description: 'Service expert de nettoyage de tapis à domicile sur Lille',
    icon: Camera,
    href: '/services/tapis',
    image: 'https://images.unsplash.com/photo-1534889156217-d643df14f14a?auto=format&fit=crop&q=80',
  },
];
---

<Layout {title} {description}>
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="absolute inset-0 bg-grid-black/[0.02] -z-10"></div>
    
    <div class="container mx-auto px-4 py-24">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/60">
          Nos Services de Nettoyage
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Des solutions professionnelles pour tous vos besoins de nettoyage à Lille
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {services.map((service) => (
          <a href={service.href} class="group">
            <div class="relative overflow-hidden border-none shadow-lg hover:shadow-xl transition-all duration-300 rounded-lg">
              <div class="relative h-64">
                <img
                  src={service.image}
                  alt={service.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-0 p-6 text-white">
                  <div class="flex items-center gap-3 mb-2">
                    <service.icon class="h-6 w-6" />
                    <h2 class="text-2xl font-bold">{service.title}</h2>
                  </div>
                  <p class="text-white/80 mb-4">{service.description}</p>
                  <div class="inline-flex items-center justify-center px-4 py-2 rounded-lg bg-white text-black hover:bg-white/90 transition-colors group-hover:translate-x-2">
                    En savoir plus
                    <ArrowRight class="ml-2 h-4 w-4" />
                  </div>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>